<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_name"
        android:textSize="@dimen/size_30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_location_on_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phaungbyin"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/location_image"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:textColor="#ffffff"
        android:background="@drawable/round"
        app:layout_constraintLeft_toLeftOf="@+id/location_image"
        app:layout_constraintTop_toBottomOf="@+id/location_image"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/panda_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/panda"
        android:background="@drawable/round2"
        app:layout_constraintLeft_toRightOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_follow"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/txt_1256"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1256"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/txt_34"
        app:layout_constraintTop_toBottomOf="@+id/btn_follow"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_34"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        app:layout_constraintLeft_toLeftOf="@id/txt_34"
        app:layout_constraintTop_toBottomOf="@+id/txt_34"/>

    <TextView
        android:id="@+id/txt_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followes"
        app:layout_constraintLeft_toRightOf="@id/txt_post"
        app:layout_constraintBaseline_toBaselineOf="@id/txt_post"
        app:layout_constraintLeft_toLeftOf="@+id/txt_1256"/>

    <ImageView
        android:id="@+id/aa_image"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:src="@drawable/aa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_post"
        app:layout_constraintRight_toLeftOf="@+id/bb_image"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/bb_image"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:src="@drawable/bb"
        app:layout_constraintLeft_toRightOf="@+id/aa_image"
        app:layout_constraintRight_toLeftOf="@id/cc_image"
        app:layout_constraintTop_toBottomOf="@+id/txt_post"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/cc_image"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:src="@drawable/cc"
        app:layout_constraintLeft_toRightOf="@id/bb_image"
        app:layout_constraintRight_toLeftOf="@id/dd_image"
        app:layout_constraintTop_toBottomOf="@id/txt_post"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/dd_image"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:src="@drawable/dd"
        app:layout_constraintLeft_toRightOf="@id/cc_image"
        app:layout_constraintRight_toLeftOf="@+id/ee_image"
        app:layout_constraintTop_toBottomOf="@id/txt_post"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/ee_image"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:src="@drawable/ee"
        app:layout_constraintLeft_toRightOf="@+id/dd_image"
        app:layout_constraintTop_toBottomOf="@id/txt_post"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/ic_public"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_public"
        app:layout_constraintTop_toBottomOf="@id/aa_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ic_facebook"
        app:layout_constraintHorizontal_chainStyle="spread"
        />

    <ImageView
        android:id="@+id/ic_facebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_facebook"
        app:layout_constraintTop_toBottomOf="@id/aa_image"
        app:layout_constraintLeft_toRightOf="@+id/ic_public"
        app:layout_constraintRight_toLeftOf="@+id/ic_email"
        />

    <ImageView
        android:id="@+id/ic_email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_email"
        app:layout_constraintTop_toBottomOf="@id/aa_image"
        app:layout_constraintLeft_toRightOf="@id/ic_facebook"
        app:layout_constraintRight_toLeftOf="@+id/ic_be"
        />

    <ImageView
        android:id="@+id/ic_be"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_be"
        app:layout_constraintTop_toBottomOf="@id/aa_image"
        app:layout_constraintLeft_toRightOf="@id/ic_email"
        app:layout_constraintRight_toLeftOf="@+id/ic_twitter"

        />

    <ImageView
        android:id="@+id/ic_twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_twitter"
        app:layout_constraintTop_toBottomOf="@id/aa_image"
        app:layout_constraintLeft_toRightOf="@id/ic_be"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round1"
        android:src="@drawable/round1"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_public"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="@dimen/size_30sp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="@+id/btn_follow"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_description"
        app:layout_constraintLeft_toLeftOf="@+id/btn_follow"
        app:layout_constraintTop_toBottomOf="@+id/txt_about"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>